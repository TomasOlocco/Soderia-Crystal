@model IPagedList<SODERIA_I.Models.Cliente>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "Clientes";
}

<div class="container m-3">
    <h1>Clientes</h1>
    <hr />

    <!-- Botón para agregar nuevo cliente -->
    <p>
        <a asp-action="Create" class="btn btn-primary">Ingresar nuevo cliente</a>
    </p>

    <!-- Tabla de clientes -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model[0].zona)</th>
                    <th>@Html.DisplayNameFor(model => model[0].nombre)</th>
                    <th>@Html.DisplayNameFor(model => model[0].apellido)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Telefono)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.zona)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.apellido)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Controles de paginación -->
    <div class="pagination-container mt-4">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                 new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = 4,
            EllipsesFormat = "&#8230;"
        })
    </div>
</div>